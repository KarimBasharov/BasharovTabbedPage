<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasharovTabbedPage.Aprill"
             Title="Апрель">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lbl" Text="День дурака"
                   TextColor="Wheat"
                   FontSize="Large"
                   HorizontalOptions="Center"/>
            <Image Source="https://i.pinimg.com/736x/2c/b3/25/2cb325a5ad97603d1d471f20331b24e9.jpg"/>
            <Button x:Name="btn"
                    Text="подробнее" 
                    BackgroundColor="#ffcccc" 
                    BorderWidth="2" 
                    FontSize="Small"
                    VerticalOptions="EndAndExpand"
                    Clicked="btn_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>