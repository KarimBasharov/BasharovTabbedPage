<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasharovTabbedPage.Detsember"
             Title="Декабрь">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lbl" Text="1 Декабря. Всемирный день борьбы со СПИДом"
                   TextColor="Wheat"
                   FontSize="Large"
                   HorizontalOptions="Center"/>
            <Image Source="https://png.pngtree.com/png-clipart/20190529/ourlarge/pngtree-world-aids-day-red-ribbon-png-image_1000281.jpg"/>
            <Button x:Name="btn"
                    Text="подробнее" 
                    BackgroundColor="#ffcccc" 
                    BorderWidth="2" 
                    FontSize="Small"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="Center"
                    Clicked="btn_Clicked">
            </Button>
            <Button x:Name="batn"
                    Text="дата"
                    BackgroundColor="#ffcccc"
                    BorderWidth="2"
                    FontSize="Small"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    Clicked="batn_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>