<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasharovTabbedPage.Jaanuar"
            Title="Январь">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lbl" Text="3 Января. День рождения соломинки для коктейлей." TextColor="Wheat"
                   FontSize="Large"
                HorizontalOptions="Center" />
            <Image Source="https://sovetnews.com/wp-content/uploads/2017/01/100pcs-Lot-wedding-decoration-Or-Birthday-Party-Decorations-Kids-Striped-Chevron-And-Polka-Dot-Drinking-font-300x300.jpg" HorizontalOptions="Center"/>
            <Button x:Name="btn"
                    Text="подробнее" 
                    BackgroundColor="#ffcccc" 
                    BorderWidth="2" 
                    FontSize="Small"
                    VerticalOptions="EndAndExpand"
                    Clicked="btn_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>