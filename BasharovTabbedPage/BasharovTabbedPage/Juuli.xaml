<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasharovTabbedPage.Juuli"
             Title="Июль">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lbl" Text="17 Июля. Всемирный день эмоджи (эмодзи)."
                   TextColor="Wheat"
                   FontSize="Large"
                   HorizontalOptions="Center"/>
            <Image Source="https://i.pinimg.com/originals/c9/27/47/c9274736e96a1594b76ffc5cda4ee10d.jpg"/>
            <Button x:Name="btn"
                    Text="подробнее" 
                    BackgroundColor="#ffcccc" 
                    BorderWidth="2" 
                    FontSize="Small"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="Center"
                    Clicked="btn_Clicked">
            </Button>
            <Button x:Name="batn"
                    Text="дата"
                    BackgroundColor="#ffcccc"
                    BorderWidth="2"
                    FontSize="Small"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    Clicked="batn_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>