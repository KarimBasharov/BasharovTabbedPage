<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasharovTabbedPage.Marts"
             Title="Март">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lbl" Text="Международный женский день."
                   TextColor="Wheat"
                   FontSize="Large"
                   HorizontalOptions="Center"/>
            <Image Source="https://i.pinimg.com/736x/ab/f2/d7/abf2d7ae1cb58d05fcb2359463f084ea.jpg"/>
            <Button x:Name="btn"
                    Text="подробнее" 
                    BackgroundColor="#ffcccc" 
                    BorderWidth="2" 
                    FontSize="Small"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="Center"
                    Clicked="btn_Clicked">
            </Button>
            <Button x:Name="batn"
                    Text="дата"
                    BackgroundColor="#ffcccc"
                    BorderWidth="2"
                    FontSize="Small"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    Clicked="batn_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>